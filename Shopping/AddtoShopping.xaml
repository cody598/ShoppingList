<UserControl x:Class="Shopping.AddtoShopping"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shopping"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="40"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" Width ="400" Background ="DarkRed" FontStyle ="Normal" FontSize ="20" HorizontalAlignment="Center">Add Item to List</TextBlock>
        <TextBox Height ="70" Name ="ItemToAdd" Grid.Row="1"/>
        <Button Name ="AddButton" Grid.Row="2">Add</Button>

    </Grid>
</UserControl>
